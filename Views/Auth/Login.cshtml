@using SpeakerManagementSystem.ViewModel;
@model Login;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex flex-column flex-root" id="kt_app_root">
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10">
            <div class="d-flex flex-center flex-column flex-lg-row-fluid">
                <div class="w-lg-500px p-10">
                    <form id="account" class="form w-100" method="post">
                        <div class="text-center mb-11">
                            <h1 class="text-dark fw-bolder mb-3">Sign In</h1>
                            <div class="text-gray-500 fw-semibold fs-6">Your Social Campaigns</div>
                        </div>

                        <div class="row g-3 mb-9">
                            <div class="col-md-6">
                                <a href="javascript:void()" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                                    <img alt="Logo" src="~/assets/media/svg/brand-logos/google-icon.svg" class="h-15px me-3" /> Sign in with Google
                                </a>
                            </div>

                            <div class="col-md-6">
                                <a href="javascript:void()" class="btn btn-flex btn-outline btn-text-gray-700 btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
                                    <img alt="Logo" src="~/assets/media/svg/brand-logos/apple-black.svg" class="theme-light-show h-15px me-3" />
                                    <img alt="Logo" src="~/assets/media/svg/brand-logos/apple-black-dark.svg" class="theme-dark-show h-15px me-3" />Sign in with Apple
                                </a>
                            </div>
                        </div>

                        <div class="separator separator-content my-14">
                            <span class="w-125px text-gray-500 fw-semibold fs-7">Or with email</span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-danger" role="alert"></div>

                        <div class="fv-row mb-8">
                            <input type="text" asp-for="Email" class="form-control bg-transparent" autocomplete="off" aria-required="true" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="fv-row mb-3">
                            <input type="password" asp-for="Password" class="form-control bg-transparent" autocomplete="off" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        @* <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-3">
                            <div></div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary">Forgot Password ?</a>
                        </div> *@

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>

                        <div class="d-grid mb-10">
                            <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
                                <span class="indicator-label">Sign In</span>
                                <span class="indicator-progress">
                                    Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}